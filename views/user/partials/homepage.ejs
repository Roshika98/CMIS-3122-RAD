<!-- ======= Hero Section ======= -->
<section id="hero" class="d-flex justify-content-center align-items-center">
  <!-- <a href='https://www.freepik.com/vectors/student'>Student vector created by upklyak - www.freepik.com</a> -->
  <div class="container position-relative" data-aos="zoom-in" data-aos-delay="100">
    <h1>Modules Explorer</h1>
    <h2>Faculty of Applied Sciences,<br>Wayamba University of SriLanka</h2>
    <a href="courses.html" class="btn-get-started">Explore</a>
    <a href="https://localhost:3000/courses/register" class="btn-get-started">Register</a>
  </div>
</section><!-- End Hero -->

<main class="main">
  <!-- ======= Counts Section ======= -->
  <section id="counts" class="counts section-bg">
    <div class="container">

      <div class="row counters">

        <div class="col-lg-3 col-6 text-center">
          more than
          <span data-purecounter-start="0" data-purecounter-end="400" data-purecounter-duration="1"
            class="purecounter"></span>
          <p>Students</p>
        </div>

        <div class="col-lg-3 col-6 text-center">
          <br>
          <span data-purecounter-start="0" data-purecounter-end="139" data-purecounter-duration="1"
            class="purecounter"></span>
          <p>Modules</p>
        </div>

        <div class="col-lg-3 col-6 text-center">
          <br>
          <span data-purecounter-start="0" data-purecounter-end="4" data-purecounter-duration="1"
            class="purecounter"></span>
          <p>Departments</p>
        </div>

        <div class="col-lg-3 col-6 text-center">
          <br>
          <span data-purecounter-start="0" data-purecounter-end="3" data-purecounter-duration="1"
            class="purecounter"></span>
          <p>Types of Degrees</p>
        </div>

      </div>

    </div>
  </section><!-- End Counts Section -->

  <section id="popular-courses" class="courses">
    <div class="container" data-aos="fade-up">

      <div class="section-title">
        <h2>Notices</h2>
        <p>Recent News & Notices</p>
      </div>
      <div class="row" data-aos="zoom-in" data-aos-delay="100">
        <ul style="list-style-type: none;">

          <% notices.forEach(element => { %>
          <li class="notice-li">
            <div class="col-lg-8 col-md-12 d-flex align-items-stretch">
              <div class="section-title-notice">
                <a href="https://localhost:3000/courses/notices/<%= element.id %>">
                  <p><%= element.heading %></p>
                </a>
                <h2><%= element.noticeDate.toDateString() %></h2>
              </div>
            </div>
          </li>
          <% }) %>

        </ul>
      </div>
    </div>
  </section>

</main>