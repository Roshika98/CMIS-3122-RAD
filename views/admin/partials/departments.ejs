<%- include('../notifications/success')  %>
<div class="row">
    <div class="col-md-12">
        <div class="card" id="mainContent">
            <div class="card-header">
                <h4 class="card-title"> Departments</h4>
            </div>
            <div class="card-body">

                <div class="table-responsive">
                    <table class="table">
                        <thead class=" text-primary">
                            <th>
                                Dept ID
                            </th>
                            <th>
                                Department Name
                            </th>
                            <th class="text-right">

                            </th>
                        </thead>
                        <tbody>

                            <% result.forEach(element => { %>
                            <tr>
                                <td>
                                    <%= element.deptID %>
                                </td>
                                <td>
                                    <%= element.deptName %>
                                </td>
                                <td class="text-right">
                                    <div class="container">
                                        <form class="form-inline ml-auto">
                                            <div class="col-md-6 pr-1">
                                                <button type="submit"
                                                    class="btn btn-outline-default btn-round btn-sm editBtns"
                                                    data-id="<%= element.deptID %>">
                                                    edit
                                                </button>
                                            </div>
                                            <div class="col-md-2 pl-1">
                                                <button type="submit"
                                                    class="btn btn-outline-danger btn-round btn-sm deleteBtns"
                                                    data-id="<%= element.deptID %> ">
                                                    delete
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>

                        </tbody>
                    </table>
                </div>
                <div class="container">
                    <form class="form-inline ml-auto">
                        <button class="btn btn-primary btn-round" id="newDept">
                            <i class="fa fa-plus-circle"> </i> Add Department
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <div class="col-md-12" id="subContent">

        <div class="card">
            <div class="card-header">
                <h5 class="title">Add New Department</h5>
            </div>
            <div class="card-body">
                <form>
                    <div class="row">
                        <div class="col-md-2 pr-1">
                            <div class="form-group">
                                <label for="deptID">Department ID</label>
                                <input type="number" id="deptID" class="form-control" placeholder="1">
                            </div>
                        </div>
                        <div class="col-md-4 pl-1">
                            <div class="form-group">
                                <label for="deptName">Department Name</label>
                                <input type="text" class="form-control" placeholder="department name" id="deptName">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-2 pr-1">
                            <div class="form-group">
                                <button class="btn btn-danger btn-round btn-outline-danger" id="back">
                                    <i class="now-ui-icons ui-1_simple-remove"></i> Cancel
                                </button>
                            </div>
                        </div>
                        <div class="col-md-3 pl-1">
                            <div class="form-group">
                                <button class="btn btn-primary btn-round btn-outline-info" id="addDept">
                                    <i class="now-ui-icons ui-1_simple-add"></i> Add Department
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>


    </div>



    <div class="col-md-12" id="subContent-EditDept">


    </div>

</div>