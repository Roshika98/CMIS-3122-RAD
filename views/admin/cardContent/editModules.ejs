<div class="card-header">
    <h5 class="title">Edit Module</h5>
</div>

<div class="card-body">
    <form>
        <div class="row">
            <div class="col-md-6 pr-1">
                <div class="form-group disabled">
                    <label for="u_code">Module Code</label>
                    <input type="text" class="form-control disabled" id="u_code"
                        value="<%= moduleData[0].course_code %> ">
                </div>
            </div>
            <div class="col-md-4 pl-1">
                <div class="form-group">
                    <label for="u_name">Module Name</label>
                    <input type="email" class="form-control" id="u_name" value="<%= moduleData[0].name %> ">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 pr-1">
                <div class="form-group">
                    <label for="u_credit">Module Credit</label>
                    <input type="number" class="form-control" placeholder="Eg: 1" id="u_credit"
                        value="<%= moduleData[0].credit %>">
                </div>
            </div>
            <div class="col-md-6 pl-1">
                <div class="form-group">
                    <label for="u_dept">Department</label>
                    <select class="form-control" id="u_dept">
                        <option selected> Select Department</option>
                        <% departmentsSet.forEach(element => { %>
                        <% if (moduleData[0].deptID===element.deptID) { %>
                        <option value="<%= element.deptID %>" selected><%= element.deptName %>
                            <% } else {%>
                        <option value="<%= element.deptID %>"><%= element.deptName %>
                            <% } %>
                        </option>
                        <% }) %>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 pr-1">
                <div class="form-group">
                    <label for="u_level">Module Level</label>
                    <select class="form-control" id="u_level">
                        <option> Select Level of study</option>
                        <% if (moduleData[0].level==1) { %>
                        <option value="1" selected>Level I </option>
                        <% } else{%>
                        <option value="1">Level I </option>
                        <% } %>
                        <% if (moduleData[0].level==2) { %>
                        <option value="2" selected>Level II </option>
                        <% } else{%>
                        <option value="2">Level I </option>
                        <% } %>
                        <% if (moduleData[0].level==3) { %>
                        <option value="3" selected>Level III </option>
                        <% } else{%>
                        <option value="3">Level III </option>
                        <% } %>
                        <% if (moduleData[0].level==4) { %>
                        <option value="4" selected>Level IV </option>
                        <% } else{%>
                        <option value="4">Level IV </option>
                        <% } %>
                    </select>
                </div>
            </div>
            <div class="col-md-6 pl-1">
                <div class="form-group">
                    <label for="u_semester">Semester</label>
                    <select class="form-control" id="u_semester">
                        <option selected> Select Semester</option>
                        <% if (moduleData[0].semester==1) { %>
                        <option value="1" selected>Semester 1</option>
                        <% } else {%>
                        <option value="1">Semester 1</option>
                        <% } %>
                        <% if (moduleData[0].semester==2) { %>
                        <option value="2" selected>Semester 2</option>
                        <% } else {%>
                        <option value="2">Semester 2</option>
                        <% } %>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="u_desc">Module description</label>
                    <textarea rows="4" cols="80" class="form-control" placeholder="Enter module description here"
                        id="u_desc"><%= moduleData[0].description %></textarea>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h6 class="title">Availability</h6>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 pr-1">
                <div class="form-check">
                    <label class="form-check-label">
                        General Availability
                        <% if (moduleData[0].general) { %>
                        <input class="form-check-input" type="checkbox" id="u_general_available" checked>
                        <% } else {%>
                        <input class="form-check-input" type="checkbox" id="u_general_available">
                        <% } %>
                        <span class="form-check-sign">
                            <span class="check"></span>
                        </span>
                    </label>
                </div>
            </div>
            <div class="col-md-2 pl-1">
                <div class="form-check">
                    <label class="form-check-label">
                        Is Mandatory
                        <% if (moduleData[0].general_mandatory) { %>
                        <input class="form-check-input" type="checkbox" id="u_general_mandatory" checked>
                        <% } else {%>
                        <input class="form-check-input" type="checkbox" id="u_general_mandatory">
                        <% } %>
                        <span class="form-check-sign">
                            <span class="check"></span>
                        </span>
                    </label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 pr-1">
                <div class="form-check">
                    <label class="form-check-label">
                        Major 1 Availability
                        <% if (moduleData[0].major1) { %>
                        <input class="form-check-input" type="checkbox" id="u_m1_available" checked>
                        <% } else {%>
                        <input class="form-check-input" type="checkbox" id="u_m1_available">
                        <% } %>
                        <span class="form-check-sign">
                            <span class="check"></span>
                        </span>
                    </label>
                </div>
            </div>
            <div class="col-md-2 pl-1">
                <div class="form-check">
                    <label class="form-check-label">
                        Is Mandatory
                        <% if (moduleData[0].major1_mandatory) { %>
                        <input class="form-check-input" type="checkbox" id="u_m1_mandatory" checked>
                        <% } else { %>
                        <input class="form-check-input" type="checkbox" id="u_m1_mandatory">
                        <% } %>
                        <span class="form-check-sign">
                            <span class="check"></span>
                        </span>
                    </label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 pr-1">
                <div class="form-check">
                    <label class="form-check-label">
                        Major 2 Availability
                        <% if (moduleData[0].major2) { %>
                        <input class="form-check-input" type="checkbox" id="u_m2_available" checked>
                        <% } else {%>
                        <input class="form-check-input" type="checkbox" id="u_m2_available">
                        <% } %>
                        <span class="form-check-sign">
                            <span class="check"></span>
                        </span>
                    </label>
                </div>

            </div>
            <div class="col-md-2 pl-1">
                <div class="form-check">
                    <label class="form-check-label">
                        Is Mandatory
                        <% if (moduleData[0].major2_mandatory) { %>
                        <input class="form-check-input" type="checkbox" id="u_m2_mandatory" checked>
                        <% } else {%>
                        <input class="form-check-input" type="checkbox" id="u_m2_mandatory">
                        <% } %>
                        <span class="form-check-sign">
                            <span class="check"></span>
                        </span>
                    </label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 pr-1">
                <div class="form-check">
                    <label class="form-check-label">
                        Special Availability
                        <% if (moduleData[0].special) { %>
                        <input class="form-check-input" type="checkbox" id="u_special_available" checked>
                        <% } else {%>
                        <input class="form-check-input" type="checkbox" id="u_special_available">
                        <% } %>
                        <span class="form-check-sign">
                            <span class="check"></span>
                        </span>
                    </label>
                </div>
            </div>
            <div class="col-md-2 pl-1">
                <div class="form-check">
                    <label class="form-check-label">
                        Is Mandatory
                        <% if (moduleData[0].special_mandatory) { %>
                        <input class="form-check-input" type="checkbox" id="u_special_mandatory" checked>
                        <% } else {%>
                        <input class="form-check-input" type="checkbox" id="u_special_mandatory">
                        <% } %>
                        <span class="form-check-sign">
                            <span class="check"></span>
                        </span>
                    </label>
                </div>

            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-md-2 pr-1">
                <div class="form-group">
                    <button class="btn btn-danger btn-round btn-outline-danger" id="back">
                        <i class="now-ui-icons education_agenda-bookmark"></i> cancel
                    </button>
                </div>
            </div>
            <div class="col-md-2 pl-1">
                <div class="form-group">
                    <button class="btn btn-primary btn-round btn-outline-info" id="update">
                        <i class="now-ui-icons education_agenda-bookmark"></i> Update Module
                    </button>
                </div>
            </div>
        </div>

    </form>
</div>